<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".forgotPasswordActivity">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <EditText
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailPassChange" android:layout_alignParentTop="true"
                android:layout_marginTop="217dp"
                android:layout_centerHorizontal="true" android:hint="Email"/>
        <TextView
                android:text="Please enter your email to reset your password"
                android:layout_width="314dp"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_marginTop="108dp" android:layout_centerHorizontal="true" android:id="@+id/textView"
                android:fontFamily="@font/finger_paint" android:textColor="@color/colorIconFavorite"
                android:textAlignment="center" android:textSize="24sp"/>
        <Button
                android:text="RESET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:layout_marginBottom="190dp" android:layout_centerHorizontal="true"
                android:id="@+id/resetButton"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>